@model SahafProjesi.Models.Yayinevi

@{
    ViewData["Title"] = "Create";
}

<h1>Yayınevi</h1>

<h4>Yayınevi Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YayineviAdi" class="control-label">Yayınevi Adı</label>
                <input asp-for="YayineviAdi" class="form-control" />
                <span asp-validation-for="YayineviAdi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
