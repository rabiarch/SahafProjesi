@model SahafProjesi.Models.Kategori

@{
    ViewData["Title"] = "Edit";
}

<h1>Kategori</h1>

<h4>Kategori Düzenleme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategoriID" />
            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label">Kategori Adı</label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
